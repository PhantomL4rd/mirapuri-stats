{
  "name": "@mirapri/scraper",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:crawler": "tsx src/crawler-cli.ts",
    "build": "tsc",
    "build:crawler": "esbuild src/crawler-cli.ts --bundle --platform=node --format=esm --outfile=dist/crawler-cli.bundle.mjs --packages=external",
    "start": "node dist/index.js",
    "start:crawler": "node dist/crawler-cli.bundle.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@mirapri/shared": "workspace:*",
    "cheerio": "^1.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
