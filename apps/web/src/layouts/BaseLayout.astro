---
import '../styles/global.css';
import type { DataFreshness } from '../lib/queries';
import { ModeWatcher } from 'mode-watcher';

interface Props {
  title?: string;
  description?: string;
  freshness?: DataFreshness;
}

const { title = 'ミラプリインサイト', description = 'FF14プレイヤーのミラプリ傾向を集計・可視化', freshness } =
  Astro.props;

function formatDateSlash(dateStr: string | null): string {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  const y = date.getFullYear();
  const m = String(date.getMonth() + 1).padStart(2, '0');
  const d = String(date.getDate()).padStart(2, '0');
  return `${y}/${m}/${d}`;
}

const showFreshness = freshness?.dataFrom && freshness?.dataTo;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <!-- Lodestone ツールチップ -->
    <script src="https://lds-img.finalfantasyxiv.com/pc/global/js/eorzeadb/loader.js?v3"></script>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <ModeWatcher client:load />
    <slot name="ribbon" />

    <header class="border-b bg-card">
      <div class="mx-auto max-w-4xl px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold hover:text-muted-foreground"> ミラプリインサイト </a>
        {showFreshness && (
          <span class="text-xs text-muted-foreground">
            統計期間: {formatDateSlash(freshness!.dataFrom)} - {formatDateSlash(freshness!.dataTo)}
          </span>
        )}
      </div>
    </header>

    <main class="mx-auto max-w-4xl px-4 py-8">
      <slot />
    </main>

    <footer class="border-t bg-card">
      <div class="mx-auto max-w-4xl px-4 py-4 text-center text-sm text-muted-foreground">
        <a href="/readme" class="hover:underline">このサイトについて</a>
        <span class="mx-2">|</span>
        <a href="/faq" class="hover:underline">FAQ</a>
      </div>
      <div class="mx-auto max-w-4xl px-4 pb-4 text-center text-xs text-muted-foreground">
        © SQUARE ENIX
      </div>
    </footer>
  </body>
</html>
