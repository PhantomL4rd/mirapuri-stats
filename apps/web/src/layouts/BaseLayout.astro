---
import '../styles/global.css';
import { TrendingUp } from 'lucide-svelte';
import HeaderMenu from '../components/HeaderMenu.svelte';
import VersionSelector from '../components/VersionSelector.svelte';
import type { VersionInfo } from '../lib/db';

interface Props {
  title?: string;
  description?: string;
  versions?: VersionInfo[];
  currentVersion?: string;
}

const {
  title = 'ミラプリインサイト',
  description = 'FF14プレイヤーのミラプリ傾向を集計・可視化',
  versions = [],
  currentVersion = '',
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Lodestone への事前接続 -->
    <link rel="preconnect" href="https://lds-img.finalfantasyxiv.com" />
    <link rel="dns-prefetch" href="https://lds-img.finalfantasyxiv.com" />
    <link rel="preload" href="https://lds-img.finalfantasyxiv.com/pc/global/js/eorzeadb/loader.js?v3" as="script" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/ogp.png" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Lodestone ツールチップ -->
    <script is:inline>
      var eorzeadb = { dynamic_tooltip: true };
    </script>
    <script is:inline src="https://lds-img.finalfantasyxiv.com/pc/global/js/eorzeadb/loader.js?v3"></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        if (window.eorzeadb && eorzeadb.parse) {
          eorzeadb.parse();
        }
      });
    </script>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot name="ribbon" />

    <header class="bg-primary text-primary-foreground mb-8">
      <div class="mx-auto max-w-4xl px-4 h-14 flex items-center justify-between">
        <div class="flex-1">
          <a href="/" class="flex items-center gap-2 text-xl font-bold hover:opacity-80 transition-opacity">
            <TrendingUp class="size-6" />
            ミラプリインサイト
          </a>
        </div>
        <div class="flex items-center gap-1">
          <HeaderMenu client:load />
        </div>
      </div>
    </header>

    <main class="mx-auto max-w-4xl px-4 py-8">
      <slot />
    </main>

    <footer class="border-t bg-card pt-4">
      {versions.length > 0 && (
        <div class="mx-auto max-w-4xl px-4 pb-2 flex justify-center">
          <VersionSelector versions={versions} currentVersion={currentVersion} client:load />
        </div>
      )}
      <div class="mx-auto max-w-4xl px-4 pb-4 text-center text-xs text-muted-foreground">
        © SQUARE ENIX
      </div>
    </footer>
  </body>
</html>
