---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'ミラプリパルス', description = 'FF14プレイヤーのミラプリ傾向を集計・可視化' } =
  Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <!-- ダークモード検出（FOUC防止のため head 内で実行） -->
    <script is:inline>
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <!-- Lodestone ツールチップ -->
    <script src="https://img.finalfantasyxiv.com/lds/pc/global/js/eorzeadb/loader.js?v2"></script>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot name="ribbon" />

    <header class="border-b bg-card">
      <div class="mx-auto max-w-4xl px-4 py-4">
        <a href="/" class="text-xl font-bold hover:text-muted-foreground"> ミラプリパルス </a>
      </div>
    </header>

    <main class="mx-auto max-w-4xl px-4 py-8">
      <slot />
    </main>

    <footer class="border-t bg-card">
      <div class="mx-auto max-w-4xl px-4 py-4 text-center text-sm text-muted-foreground">
        <a href="/readme" class="hover:underline">このサイトについて</a>
        <span class="mx-2">|</span>
        <a href="/faq" class="hover:underline">FAQ</a>
      </div>
      <div class="mx-auto max-w-4xl px-4 pb-4 text-center text-xs text-muted-foreground">
        © SQUARE ENIX
      </div>
    </footer>
  </body>
</html>
